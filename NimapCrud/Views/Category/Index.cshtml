@model List<NimapCrud.Models.Category>
@{

}
<h3 class="text-center">Category List</h3>
<p class="text-center">
    <a class="btn btn-primary" href="@Url.Action("Create","Category")">Add Category</a>
</p>
<table class="table table-bordered text-center">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>
                    <a class="btn btn-success" href="@Url.Action("Edit","Category", new{id= category.CategoryId})">Edit</a>|
                    <a class="btn btn-info" href="@Url.Action("Details","Category", new{id= category.CategoryId})">Details</a>|
                    <a class="btn btn-danger" href="@Url.Action("Delete","Category", new{id= category.CategoryId})">Delete</a>|
                </td>
            </tr>
        }
    </tbody>
</table>
